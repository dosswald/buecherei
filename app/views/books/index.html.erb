<h1>Books</h1>
<%= link_to 'Add book', new_book_path ,{ :style=>'color:#FFFFFF', :class=>'a'} %></br></br>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %></br></br>

<table style="position:center">
 <tr>
  <th>ID</th>	
  <th>Title</th>
  <th>Author</th>    
  <th>Publisher</th> 
  <th>Genre</th>  
  <th>Copies</th>
  <th>Remove</th>
 </tr>

<% @books.each do |book| %>
 <tr>
  <td><%= book.id %></td>
  <td><%= book.title %></td>
  <td><%= book.author %></td>
  <td><%= book.publisher.name %></td>
  <td><%= book.genre.name %></td>
  <td><%= link_to '', book_copies_path(book) , :class=>'a show'%></td>
  <td><%= link_to '', book_path(book), method: :delete, :class=>'destroy a', data: { confirm: 'Are you sure?' } %></td>
 </tr>

<% end %>
</table></br></br>

<%= link_to 'Customers', customers_path ,{:class=>'a'} %>
<%= link_to 'Borrowings', borrowings_path ,{:class=>'a'} %>



